{% extends "pages/base.twig" %}

{% block content %}
	<div class="row">
		<div class="col-md-6 mx-auto border border-dark p-3 rounded">
			<div class="text-center">
				<p>
					Deseja realmete excluir o usu√°rio de nome
					{{ USER_DATA['firstname'] }}
					{{ USER_DATA['lastname'] }}
					e e-mail
					{{ USER_DATA['email'] }}?
				</p>
			</div>
			<div class="d-flex justify-content-end">
				<a href="{{ base_path }}/admin/users" class="m-1">
					<button class="btn btn-secondary">Cancelar</button>
				</a>
				<form method="post" action="{{ route_redirect('users.destroy', {'id' : USER_DATA['id']}) }}">
					<input type="hidden" name="_METHOD" value="DELETE">
					<button type="submit" class="btn btn-danger">Excluir</button>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
