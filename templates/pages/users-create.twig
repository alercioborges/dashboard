{% extends "base.twig" %}

{% block content %}
	<div class="col-md-8 mx-auto border border-dark p-3 rounded">
		<form method="post" action="{{ route_redirect('users.store') }}">
			<!-- firstname -->
			<div class="mb-3">
				<label for="nome" class="form-label">Nome
					<span class="text-danger">*</span>
				</label>
				<input type="text" class="form-control border border-dark" id="firstname" name="firstname" required>
			</div>

			<!-- lastname -->
			<div class="mb-3">
				<label for="sobrenome" class="form-label">Sobrenome
					<span class="text-danger">*</span>
				</label>
				<input type="text" class="form-control border border-dark" id="lastname" name="lastname" required>
			</div>

			<!-- E-mail -->
			<div class="mb-3">
				<label for="email" class="form-label">E-mail
					<span class="text-danger">*</span>
				</label>
				<input type="email" class="form-control border border-dark" id="email" name="email" required>
			</div>

			<!-- Perfil de usuário -->
			<div class="mb-3">
				<label for="perfil" class="form-label">Perfil de Usuário
					<span class="text-danger">*</span>
				</label>
				<select class="form-select border border-dark" id="perfil" name="perfil" required>
					<option value="">Selecione um perfil</option>
					<option value="admin">Administrador</option>
					<option value="usuario">Usuário</option>
					<option value="moderador">Moderador</option>
					<option value="convidado">Convidado</option>
				</select>
			</div>

			<!-- Password -->
			<div class="mb-3">
				<label for="senha" class="form-label">Senha
					<span class="text-danger">*</span>
				</label>
				<input type="password" class="form-control border border-dark" id="password" name="password" required minlength="6">
				<div class="form-text">A senha deve conter pelo menos 6 caracteres.</div>
			</div>

			<!-- Botão de submit -->
			<div>
				<button type="submit" class="btn btn-primary">Cadastrar</button>
			</div>
		</form>
	</div>
{% endblock %}
